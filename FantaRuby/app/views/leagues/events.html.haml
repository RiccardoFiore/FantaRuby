- flash.each do |key, value|
  %div{:class => "alert alert-#{key}"}= value
- if current_user.player? || current_user.president?
  %table#tabella_eventi
    %caption
      %h1 Eventi del calendario
    %tr#tr_eventi
      %th#th_eventi Nome Evento
      %th#th_eventi Giorno
      %th#th_eventi Ora
    - @event_list.items.each do |event|
      %tr#tr_eventi
        %td#td_eventi_nome= event.summary
        %td#td_eventi_giorno
          - y=""
          - event.end.date_time.inspect.split[0,4].map{ |x| y+=x }
          = y
        %td#td_eventi_ora
          - if event.end.date_time!=nil
            = event.end.date_time.inspect.split[4][0,5]
- if current_user.admin?
  %br/
  %h1 Eventi del calendario
  %br/
  %table#tabella_eventi
    %caption
    %h4 seleziona l' evento da eliminare
    %tr#tr_eventi
      %th#th_eventi Nome Evento
      %th#th_eventi Giorno
      %th#th_eventi Ora
    - @event_list.items.each do |event|
      %tr#tr_eventi
        %td#td_eventi_nome= link_to event.summary, league_path(event.id), method: :delete

        %td#td_eventi_giorno
          - y=""
          - event.end.date_time.inspect.split[0,4].map{ |x| y+=x }
          = y
        %td#td_eventi_ora
          - if event.end.date_time!=nil
            = event.end.date_time.inspect.split[4][0,5]
      
  = form_tag new_event_path('federicobucci504@gmail.com'), :method => :post do
    = label :match, :title, 'NUOVO EVENTO'
    = text_field :match1, :title
    %br/
    %br/
    = label :match, :data, 'Date'
    = datetime_select :match, :data
    %br/
    %br/
    = submit_tag 'crea evento'
