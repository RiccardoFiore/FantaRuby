<h2>Modifica quotazioni calciatori</h2>

<%= form_tag edit_soccers_player_path , :method => :get do -%>
  <%= label_tag 'SoccerPlayers' %>
  <%= text_field_tag 'SoccerPlayers' %>
  <%= submit_tag 'Cerca' %>
<% end -%>

<% if @s_p %>
    <%= form_tag soccers_player_path(@s_p.cod) , :method => :put do -%>
      <table>
        <th>
            Giocatore
        </th>
        <th>
            Ruolo
        </th>
        <th>
            Quot.
        </th>
        <tbody>
            <tr>
                <td><%= @s_p.cognome %></td>
                <td><%= @s_p.ruolo %></td>
                <td><input name="quotazione" type="text" value=<%= @s_p.quotazione %> style="width: 50px;float:right"></td>
                <td><%= submit_tag 'Modifica' %></td>
            </tr>
        </tbody>
      </table>
    <% end -%>
<% end %>
<br/>
<br/>
