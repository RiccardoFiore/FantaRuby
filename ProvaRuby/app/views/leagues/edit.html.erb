<h2>
  Settings of <%= @lega.name %>
</h2>
<%= form_for @lega do |f| %>
  <div class="field">
    <%= f.label :president_id %>
    <%= f.collection_select :president_id,@users.order(:email),:id ,:email,include_blank: false %>
  </div>
  <br/>
  <div class="field">
    <% if current_user.president? %>
      <%= label :league, :description, 'Info di lega' %>
      <br/>
      <%= text_area :league, :description, value: @lega.description %>
      <br/>
      <% if @lega.status == "Aperta" %>
        <%= f.label :status %>
        <%= f.radio_button :status, "Aperta", checked: true %>
        Aperta
        <%= f.radio_button :status, "Chiusa" %>
        Chiusa
      <% else %>
        <%= f.label :status %>
        <%= f.radio_button :status, "Aperta" %>
        Aperta
        <%= f.radio_button :status, "Chiusa", checked: true %>
        Chiusa
      <% end %>
    <% end %>
  </div>
  <br/>
  <%= submit_tag 'Save Changes' %>
<% end %>
<br/>
<br/>
<%= link_to "Torna all'Home Page della lega", leagues_path %>
